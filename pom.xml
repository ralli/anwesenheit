        <maven.mockito.dependency>2.23.4</maven.mockito.dependency>
        <maven.junit.dependency>4.12</maven.junit.dependency>


        <!-- code metrics -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.sourceVersion>1.7</project.build.sourceVersion>
    </properties>
    <developers>
        <developer>
            <id>ralli</id>
            <name>Ralph Juhnke</name>
            <email>r_juhnke@gmx.de</email>
            <url>https://github.com/ralli</url>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>0</timezone>
            <properties>
                <picUrl>https://secure.gravatar.com/avatar/a94f4299dfac69693bd99b9d9fa66f59</picUrl>
            </properties>
        </developer>
